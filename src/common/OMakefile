

OCAMLINCLUDES += +compiler-libs
OCAMLINCLUDES += $(UTILS_INCLUDES)
LocalFiles=oconfig.ml
$(LocalFiles): oconfig.mlp
	sed -e "s|%%LIBDIR%%|$(OCAMLLIB)|" $< > $@

FILES = \
    oconfig \
    ast_print \
    id_set\
    configf\
    locf \
    fcset\
    options\
    tokenf \
    lex_util \
    lexgen \
    location_util \
    parsetree_util\
    escape \
    translate_lex\
    fan_util \
    fan_warnings\
    token_stream
    
.PHONY: clean lib
lib: $(OCamlLibrary libcommon, $(FILES))


clean:
    rm -rf $(OCAMLBIN_EXT)
    rm -rf $(LocalFiles)


