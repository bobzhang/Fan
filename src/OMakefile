PMAKE = $(file pmake)

######################################################
## intentionaly to remove the strong dependency on fan
snapshot: :exists: fan
    section
        cd $(DIR_MAIN)
        foreach(f => ..., $(FAN_FILES) $(DRIVER_FILES))
            if $(file-exists $f.ml)
                ../fan -printer o $f.ml > ../cold/$f.ml
            if $(file-exists $f.mli)
                cp $f.mli ../cold/$f.mli
        # $(PMAKE) fan -- cause a project lock


.PHONY: coldtop
coldtop:utils/libutils.cma common/libcommon.cma treeparser/libtreeparser.cma cold/libcold_top.cma
    
clean:
    rm -rf $(OCAMLBIN_EXT)
    rm -rf fan fan0 fan1

