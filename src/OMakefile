

# USE_OCAMLFIND=true
# we don't depend on ocamlfind here

# OMakeFlags(--verbose)

## compile flags
OCAMLFLAGS = 
BYTE_ENABLED = true

OCAMLBIN_EXT = *.cmo *.cmi *.cmx *.cma *.cmxa *.cmxs *.run *.opt *.annot

COMMON_INCLUDES[] =
    $(dir common)
TREEPARSER_INCLUDES[]=
    $(dir treeparser)
    $(COMMON_INCLUDES)
COLD_INCLUDES[]=
    $(dir cold)
    $(TREEPARSER_INCLUDES)
SRC_INCLUDES[]=
    $(dir src)
    $(TREEPARSER_INCLUDES)

NATIVE_ENABLED = true
FILES[] =
    # fan
PROGRAM = fan
HOT_PROGRAM = fan_hot

COLD_PP = $(file $(PROGRAM))
HOT_PP = $(file $(HOT_PROGRAM))



OCAML_OTHER_LIBS += dynlink
OCAML_LIBS[] =
    common/libcommon
    treeparser/libtreeparser
OCAML_LINK_FLAGS += -linkall    


.SUBDIRS: common treeparser
section
    .SUBDIRS: cold 
    OCAML_LIBS[] += cold/libcold
    OCamlProgram ($(PROGRAM), $(FILES))
# .DEFAULT: $(PROGRAM)

section
    vmount(l,hot,hot2)
    .SUBDIRS: hot2
    OCAML_LIBS[] += hot2/libhot
    OCamlProgram($(HOT_PROGRAM), $(FILES))

HOT2_PROGRAM=fan_hot2    

section
    vmount(l,hot,hot3)
    .SUBDIRS: hot3
    OCAML_LIBS[] += hot3/libhot
    OCamlProgram($(HOT2_PROGRAM), $(FILES))
clean:
    rm -rf $(OCAMLBIN_EXT)

